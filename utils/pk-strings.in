var stdin = open ("<stdin>");
var stdout = open ("<stdout>");

var offset = 0#B;

try
{
  flush (stdin, offset);

  var b = byte @ stdin : offset;
  /* If the byte is a printable character, poke it in stdout.  */
  if (b >= 0x20 && b <= 0x7e)
    byte @ stdout : iosize (stdout) = b;

  offset += 1#B;
}
until E_eof;

close (stdin);
close (stdout);
