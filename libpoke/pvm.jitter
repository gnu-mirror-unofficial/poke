                                                                             \
    if (INT_DIVIDE_OVERFLOW (a64, b))                                        \
      PVM_RAISE_DFL (PVM_E_OVERFLOW);                                        \
    else                                                                     \
      JITTER_PUSH_STACK (PVM_MAKE_##TYPE (a / b, size));                     \
   }

# define PVM_MOD_SIGNED(TYPE,CTYPE)                                          \
