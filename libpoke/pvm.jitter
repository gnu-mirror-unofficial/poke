# Convert the long at the top of the stack to a long featuring
# NBITS bits.
#
# NBITS can be any number from 1 to 64.
#
# Stack: ( LONG -- LONG LONG )

instruction ltol (?n pvm_literal_printer_cast)
  code
    PVM_CONVOP (LONG, int64_t, long, int64_t);
  end
end

