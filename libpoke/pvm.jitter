#
# NBITS can be any number from 1 to 64.
#
# Stack: ( LONG -- LONG ULONG )

instruction ltolu (?n pvm_literal_printer_cast)
  code
    PVM_CONVOP (LONG, int64_t, ulong, uint64_t);
  end
end

